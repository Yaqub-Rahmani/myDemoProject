@using EntityLayer.Concrete
@model List<Company>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_manigLayout.cshtml";
}



<section class="content">

    <!-- Default box -->
    <div class="card card-solid">
        <div class="card-header">
            <h1 class="card-title">Profile</h1>

        </div>
        <!-- /.card-header -->
        <div class="card-body pb-0">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                        <div class="card bg-light d-flex flex-fill">
                            <div class="card-header text-primary border-bottom-0">
                                @item.Catagory.catagoryName
                            </div>
                            <div class="card-body pt-0">
                                <div class="row">
                                    <div class="col-7">
                                        <h2 class="lead mb-2"><b>@item.companyName</b></h2>
                                        <p class="text-muted text-sm">@item.companyBoss</p>
                                        <ul class="ml-4 mb-0 fa-ul text-muted">
                                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-envelope mr-3"></i></span>@item.companyEmail</li>
                                            <li class="small my-1mb-auto"><span class="fa-li"><i class="fas fa-lg fa-phone mr-3"></i></span>@item.companyPhone  /  @item.companyMobile</li>
                                            <li class="small my-1"><span class="fa-li"><i class="fas fa-lg fa-map-marker mr-3"></i></span>@item.companyAddress.Substring(0, 20)</li>
                                        </ul>
                                    </div>
                                    <div class="col-5 text-center">
                                        <img src="@item.companyLogoPhoto" alt="Company Logo" class="img-circle img-fluid">
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="text-right">
                                    <a href="/Company/RemoveCompany/@item.companyID" class="btn btn-sm btn-danger py-1">
                                        <i class="fas fa-times mr-3"></i> Delete
                                    </a>
                                    <a href="/Company/UpdateCompany/@item.companyID" class="btn btn-sm btn-success py-1">
                                        <i class="fas fa-undo mr-2"></i> Update
                                    </a>
                                    <a href="/Company/viewCompany/@item.companyID" class="btn btn-sm btn-primary py-1">
                                        <i class="fas fa-user mr-2"></i> View
                                    </a>

                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
<br />
<a href="/Company/addCompany" class="btn btn-sm btn-outline-primary px-3 py-2 ml-5">
    <i class="fas fa-plus mr-2"></i>
    New Company
</a>

