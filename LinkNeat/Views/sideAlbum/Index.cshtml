@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayputPage.cshtml";
}

<header id="fh5co-header" class="fh5co-cover fh5co-cover-sm" role="banner" style="background-image: url(/AboutPhoto/album.png); margin-bottom: 100px;" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-7 text-left">
                <div class="display-t">
                    <div class="display-tc animate-box" data-animate-effect="fadeInUp">
                        <h1 class="mb30">Albums</h1>
                        <h4 class="mb30 text-muted">Over the phone or online</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Start  Photo Gallery -->
<div id="gallery" class="gallery-box">
    <div class="container-fluid">
        <div class="row">

            <ul class="popup-gallery clearfix">

                @foreach (var mitem in Model)
                {
                    <li>
                        <a href="@mitem.aboutPhotoUrl">
                            <img class="img-fluid" src="@mitem.aboutPhotoUrl" alt="Imag">
                            <span class="overlay"><i class="fas fa-helicopter" aria-hidden="true"></i></span>
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
<!-- End Gallery -->
