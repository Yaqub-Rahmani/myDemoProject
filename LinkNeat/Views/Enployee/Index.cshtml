@using EntityLayer.Concrete
@model List<EmployeeUser>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_manigLayout.cshtml";
}

<div class="row text-right">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Employee List</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search" />
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0" style="height: 450px;">
                <table class="table table-head-fixed text-nowrap">
                    <thead>
                        <tr>

                            <th>#</th>
                            <th>Name</th>
                            <th>Minimum Salary</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Category</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.employeeID</td>
                                <td>@item.employeeNikName</td>
                                <td>$ @item.employeeMoneyAz</td>
                                <td>@item.employeeEmail.Substring(0,15)</td>
                                <td>@item.employeeMobile</td>
                                <td>@item.Catagory.catagoryName</td>
                                @if (item.employeeAct.Equals(false))
                                {


                                    <td>
                                        <a href="/Enployee/changeEmployee/@item.employeeID" class="btn btn-danger px-3 py-1">
                                            <i class="fas fa-times mr-3"></i>Inactive
                                        </a>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <a href="/Enployee/changeEmployee/@item.employeeID" class="btn btn-primary px-3 py-1">
                                            <i class="fas fa-check mr-3"></i> Active
                                        </a>
                                    </td>
                                }
                                <td>
                                    <a href="/Enployee/removeEmployee/@item.employeeID" class="btn btn-danger py-1">
                                        <i class="fas fa-times mr-3"></i> Delete
                                    </a>
                                    <a href="/Enployee/updateEmployee/@item.employeeID" class="btn btn-success py-1">
                                        <i class="fas fa-undo mr-2"></i> Update
                                    </a>
                                    <a href="/Enployee/viewEmployee/@item.employeeID" class="btn btn-primary py-1">
                                        <i class="fas fa-user mr-2"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </div>
</div>
<br />
<a href="/Enployee/addEmployee" class="btn btn-sm btn-outline-primary px-3 py-2 ml-5">
    <i class="fas fa-plus mr-2"></i>
    New Employee
</a>

