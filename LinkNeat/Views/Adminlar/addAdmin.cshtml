@model EntityLayer.Concrete.AdminLar
@{
    ViewBag.Title = "addAdmin";
    Layout = "~/Views/Shared/_manigLayout.cshtml";
}

@using (Html.BeginForm("addAdmin", "AdminLar", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">
        <h3 class="bg-secondary p-4">Add Admin</h3>
        <form class="needs-validation m-t-3 mt-5" novalidate>
            <div class="row">
                <div class="col-md-6 my-3">
                    @Html.Label("Name:", new { @class = "text-muted" })
                    @Html.TextBoxFor(x => x.AdminLastName, new { @class = "form-control", @placeholder = "Name" })
                    @Html.ValidationMessageFor(x => x.AdminLastName)
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 my-3">
                    @Html.Label("Username:", new { @class = "text-muted" })
                    @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control", @placeholder = "Username" })
                </div>
                <div class="col-md-3 my-3">
                    @Html.Label("Password:", new { @class = "text-muted" })
                    @Html.TextBoxFor(x => x.AdminPassword, new { @class = "form-control", @placeholder = "Password" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 my-3">
                    @Html.Label("Email:", new { @class = "text-muted" })
                    @Html.TextBoxFor(x => x.AdminEmail, new { @class = "form-control", @placeholder = "Email" })
                </div>
                <div class="col-md-2 my-3">
                    @Html.Label("Roll:", new { @class = "text-muted" })
                    <select class="form-select form-control" name="AdminRoll" required>
                        <option value="">-- Select --</option>
                        <option>A</option>
                        <option>B</option>
                        <option>C</option>
                    </select>
                </div>

            </div>
            <div class="row">
                <div class="col-md-6 my-3">
                    @Html.Label("Photo:", new { @class = "text-muted" })
                    <input type="file" name="AdminPhotoUrl" class="form-control" placeholder="Admin Photo" />
                </div>
            </div>
            <button class="btn btn-primary px-5 mt-3 py-2">
                <i class="fas fa-check mr-3"></i> Save
            </button>
        </form>
    </div>

}
